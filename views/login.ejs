<% include partial/header%>
</head>
<body>	
	<% include partial/nav %>
	<div class="mainwrap reglogin_mainwrap"> 
		<div class="reglogin_head_info panel-heading">
			登录
		</div> 
		<div class="regpanel">
			<div class="leftreg">
				<form class="form-horizontal reglogin_formwrap" role="form" action="/login" method="POST">
					<div class="form-group"> 
						<div class="col-sm-10">
						<input  class="form-control accountbg" id="uname" name="uname" placeholder="帐号">
						</div>
					</div>
					<div class="form-group"> 
						<div class="col-sm-10">
							<input type="password" class="form-control pwdbg" id="pwd" name="pwd" placeholder="密码">
						</div>
					</div> 
					<div class="form-group">
						<div class="col-sm-10">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="remember"> 记住密码
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-10">
							<button type="submit" id="loginBtnSub">登录</button>	  
								<input type="hidden" id="prelink" name="prelink" value="<%= prelink %>"> 
						</div>
					</div>
				</form>
				</div> 

					<div class="rightreg">
						<div class="rightpanelinfo">						
							<ul class="nav_reg_login">
								<li>
									>> 还没注册，<a href="/reg">马上注册</a><br>
								</li>
								<li>
									>> 忘记密码了?<a href="/forgetpwd">找回密码</a>
								</li>
							</ul>
						</div>
					</div>
			<div style="clear:both"></div>			
		</div>		
		<div class="msgbox">
			<% if(typeof(msg) !== 'undefined' && msg.status !== -1){ %>
				<div class="<%=(msg.status === 1)?"sucesssty":"alertsty" %>" role='alert'>
					<%-msg.content %>
					</div> 
			<% } %>
		</div>
		</div>			
	<% include partial/footer %>