<% include partial/header%>
</head>
<body>
	<% include partial/nav %>
	<div class="mainwrap">
		<div class="rightwrap">
			<% if(!locals.userinfo){%>
				<div class="loginwrap">
					<form class="form-horizontal" role="form" action="/login" method="POST">
						<div class="form-group">  
							<input  class="form-control accountbg" id="uname" name="uname" placeholder="name"> 
						</div>
						<div class="form-group">  
								<input type="password" class="form-control pwdbg" id="pwd" name="pwd" placeholder="Password"> 
						</div> 
						<div>
							<div class="form-group" style="float:left">  
								<div class="checkbox">  
										<label>
											<input type="checkbox" name="remember">记住登录  
										</label>  
								</div>
							</div>
							<div class="form-group" style="float:right">  
									<input type="hidden" id="prelink" name="prelink" value="/">
									<button type="submit" class="btn btn-default" style="padding: 6px 36px;">登录</button>
							</div> 
						</div> 
					</form>
					<div style="clear:both"></div>
				</div>
			<% }else{%>
				<div class="site_intro">
					<div class="sidetitle">38锶</div> 
					<p>做一名简单的锶者</p>
				</div>
			<%}%>
			<div class="userfresh">
				<div class="sidetitle">锶者榜</div>
				<div class="userlist">
				<%
				var hotuser = d.hotuser; 
				 for(i=0;i<hotuser.length;i++){%>
				 	<div class="userview">
						<a href="/user/<%=hotuser[i].name%>" alt="<%=hotuser[i].name%>"><img src=<%= hotuser[i].photo %>></a>
						<a href="/user/<%=hotuser[i].name%>" alt="<%=hotuser[i].name%>"><%=hotuser[i].name%></a>
					</div>
				<%}%>
				<div style="clear:both"></div>
				</div>
			</div>

			<% 
			var siteList = config.site_link;
			if(siteList.length > 0){
			%>
			<div class="site_link">
				<div class="sidetitle">链接</div>
				<ul class="site_list">
				<%for(i=0;i<siteList.length;i++){%>
					<li><a href="<%= siteList[i].link %>" target="_blank"><%= siteList[i].text %></a></li>
				<%}%>
				</ul>
			</div>
			<%}%>

		</div>
		<div class="leftwrap">
		<% if(locals.userinfo){%>
			<div class="writepanel">
				<form class="navbar-form navbar-right" id="pubstr" name="pubstr" method="GET" action="/pub">
					<textarea type="text" class="writebox" name="articlestr" id="articlestr" placeholder="写点什么呢?"></textarea>
					<div class="inputopt"><button type="submit" class="btn btn-default" id="subarticle">发布</button></div>
				</form>
			</div>
			<% }else{%>
			<div class="meiriyiju">
				<div class="onesentence"><p><%=mryj %></p></div>
				<div class="statistics"><p>共有<%=d.usercount %>位小伙伴,记下<%=d.count %>条心情<p></div>
			</div>
			<%}%>
			<h3 class="page_header_info">最新心情</h3>
			<div class="allmsg">
				<% 
				var result = d.data;  
				%>
				<% for(var i= 0;i<result.length;i++){
					if(result[i]){
						%>
						<div class="articleitem">  
						 <div class="photowrap"><a class="userlink" href="/user/<%= result[i]._creator.name %>"><img src=<%= result[i]._creator.photo %>></a></div>
							<div style="margin-left:70px;">
								<div><a class="title" id=<%= result[i].tid %> href="/user/<%= result[i]._creator.name %>"><%= result[i]._creator.name %></a><span class="shuo_sty">说</span>  </div>
								 <pre class="msg_content"><%= result[i].content %> </pre> 
								<div class="msg_date"><%= result[i].convertdate  %> 
									<div class="reply">
										<a href="/article/<%= result[i].tid %>"><%= (result[i].reply_count>0)?result[i].reply_count:'' %>回复</a>
									</div>
									<div class="reply">
										<a class="likebtn" data-tid="<%= result[i].tid %>"><span><%= (result[i].like_count>0)?result[i].like_count:'' %></span>加油</a>-  
									</div>
								</div>
							</div> 
							<div class="clearfix"></div>
						</div>
						<%}}%>
					</div>
					<% include partial/pagination%>
							</div>
							<div style="clear:both"></div>
						</div>				
	<% include partial/footer %>