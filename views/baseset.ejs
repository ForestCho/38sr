<% include partial/header%>
</head>
<body>	
	<% include partial/nav %>
	<div class="mainwrap">
		<div class="account_panel">
			<div class="set-header">
				<ul class="settab">
					<li><a href="/set" class="curset">基本信息</a></li>
					<li><a href="/set/account">账号设置</a></li>		
					<li><a href="/set/avatar">头像设置</a></li>
					<div style="clear:both"></div>
				</ul>
			</div>
			<div class="setpanel">			
				<div class="baseinfo">  
						<div class="baseinfo">
							<form class="form-horizontal" role="form" action="/set" method="POST"> 
								<div class="form-group"> 								
									<div class="col-sm-10">
										<p><span>名字: </span><span><%=locals.userinfo.name %></span></p>   
										<div style="margin-left:40px;">
											<img id="img" src="<%=locals.userinfo.photo %>" />
											<p><a href="/set/avatar">修改头像</a></p>
										</div>
									</div>
								</div>
								<div class="form-group"> 
									<div class="col-sm-10">
										<p><span>邮箱</span></p> 
										<input  class="form-control " id="email" name="email" value="<%=locals.userinfo.email %>">
										<small>此邮箱关联你的头像哦</small>
									</div>
								</div> 
								<div class="form-group">
									<div class="col-sm-10">
										<p><span>个性签名</span> </p>
										<% if(typeof(locals.userinfo.signature)==='undefined'){%>
												<input  class="form-control " id="signature" name="signature"  placeholder="一句话介绍自己噢">
										<% }else{%>
												<input  class="form-control " id="signature" name="signature"  value="<%=locals.userinfo.signature %>">
										<%}%> 
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-10">
										<p><span>自我介绍</span></p> 
										<% if(typeof(locals.userinfo.intro)==='undefined'){%>
											<textarea type="text" class="writebox" name="introduction" id="introduction" placeholder="关于俺?"></textarea>				
										<% }else{%>
											<textarea type="text" class="writebox" name="introduction" id="introduction"><%=locals.userinfo.intro %></textarea>
										
										<%}%> 
									</div>
								</div>
								<div class="form-group">
									<div class=" col-sm-10">
										<button type="submit" class="btn btn-default">确定修改</button>
									</div>
								</div>
							</form>
						</div> 
		 		</div>
				<div style="clear:both"></div>
			</div>
			<div class="msgbox">
				<% if(typeof(msg) !== 'undefined' && msg.status !== -1){ %>
					<div class="<%=(msg.status === 1)?"sucesssty":"alertsty" %>" role='alert'>
						<%-msg.content %>
						</div> 
				<% } %>
			</div>
		</div>		
	</div>			
			<% include partial/footer %>