<% include ./partial/header%>
</head>
<body class="loginbg">
<div class="loginwrap">
	<form class="am-form am-form-horizontal" role="form" action="/admin/login" method="POST">
		<div class="am-form-group">
			<label for="doc-ipt-3" class="am-u-sm-2 am-form-label">帐号</label>
			<div class="am-u-sm-10">
				<input type="text" id="uname" name="uname" placeholder="帐号" >
			</div>
		</div>
		<div class="am-form-group">
			<label for="doc-ipt-3" class="am-u-sm-2 am-form-label">密码</label>
			<div class="am-u-sm-10">
				<input type="password"  id="pwd" name="pwd" placeholder="密码"  >
			</div>
		</div>  
		<div class="am-form-group">
			<div class="col-sm-10">
				<button type="submit" id="loginBtnSub" class="am-btn am-btn-primary">登录</button>
			</div>
		</div>
	</form>
	<div style="clear:both"></div>
	<div class="msgbox">
		<% if(typeof(msg) !== 'undefined' && msg.status !== -1){ %>
		<div class="am-alert <%=(msg.status === 1)?"am-alert-success":"am-alert-warning" %>" role='alert'>
			<%-msg.content %> 
		</div>
		<% } %>
	</div>
</div>
</body>
</html>