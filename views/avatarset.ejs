<% include partial/header%>
</head>
<body>	
	<% include partial/nav %> 
	<div class="mainwrap">
		<ul class="settab">
			<li><a href="/set">基本信息</a></li>
			<li><a href="/set/account">账号设置</a></li>	
			<li><a href="/set/avatar" class="curset">头像设置</a></li>
			<div style="clear:both"></div>
		</ul>
		<div class="setpanel"> 
			<div class="msgbox">
				<% if(typeof(msg) !== 'undefined' && msg.status !== -1){ %>
					<div class="<%=(msg.status === 1)?"sucesssty":"alertsty" %>" role='alert'>
						<%-msg.content %>
						</div> 
				<% } %>
			</div>
				<form class="form-horizontal" role="form" action="/save_avatar" method="POST">
					<div class="avatarwrap"> 
						<div class="imgwrap">
							<div class="wholeimg"><img id="xuwanting" src="<%=locals.userinfo.originphoto %>" /></div>
							<div class="previewimg"><span id="preview_box" class="crop_preview"><img id="crop_preview" src="<%=locals.userinfo.originphoto %>" /></div>	 
						</div>
						<div class="form-group">
							<div class="substy col-sm-10">
								<input type="hidden" id="coords" name="coords"/>
								<button type="submit" class="btn btn-default">确定修改</button>
							</div>
						</div>
					</div>  
				</form>
				<p style="border-bottom:1px solid #777" />
				<form class="form-horizontal" action="/imgupload" method="POST" enctype="multipart/form-data">
					<div class="avatarwrap">  						
						 <input type="file" id="file" name="img" />
						 <br>
						<div class="form-group">
							<div class=" col-sm-10">
								<button type="submit" class="btn btn-default">上传</button>
							</div>
						</div>
					</div>  
				</form>
			<div style="clear:both"></div>
		</div>		
	</div>			
			<% include partial/footer %>